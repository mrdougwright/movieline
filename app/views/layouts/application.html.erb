<!DOCTYPE html>
<html>
<head>
  <title>Movieline</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>
  <%= csrf_meta_tags %>
</head>

<body>
  <nav>
    <%= link_to 'Actors', actors_path unless actors_url == request.original_url %>
    <%= link_to 'Movies', movies_path unless movies_url == request.original_url %>
    <%= link_to 'Search', root_path unless root_url == request.original_url %>
  </nav>
  <%= yield %>

</body>
</html>
