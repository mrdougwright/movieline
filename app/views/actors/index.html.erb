<h1>Actor's Searched</h1>

<section class='actor-index'>
  <ul class="list p10">
    <h2 class="dark-blue">
      <li class="lh-copy pv1">
        <span>Name</span>
        <span class='fr'>Popularity</span>
      </li>
    </h2>
    <% @actors.each do |actor| %>
      <li class="lh-copy pv1 ba bl-0 bt-0 br-0 b--dotted b--black-30">
        <span><%= link_to actor.name, actor_path(actor) %></span>
        <span class='fr'><%= actor.popularity %></span>
      </li>
    <% end %>
  </ul>
</section>
